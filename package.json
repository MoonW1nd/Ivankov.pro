{
  "name": "gatsby-starter-hello-world",
  "private": true,
  "description": "Personal site Alexander Ivankov",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop -H 0.0.0.0",
    "start": "npm run develop",
    "serve": "gatsby serve",
    "lint:ts": "./node_modules/.bin/tslint ./src/**/*.+\\(ts\\|tsx\\)",
    "lint:style": "./node_modules/.bin/stylelint ./src/**/*.+\\(sass\\|scss\\|css\\)",
    "test": "echo \"Write tests! -> https://gatsby.app/unit-testing\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g './commitlint.config.js'"
    }
  },
  "dependencies": {
    "commitizen": "^4.0.3",
    "gatsby": "^2.0.119",
    "gatsby-plugin-ts-loader": "^0.1.0",
    "gatsby-source-filesystem": "^2.1.0",
    "gatsby-transformer-remark": "^2.5.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/react": "^16.8.2",
    "@types/react-dom": "^16.8.0",
    "css-property-sort-order-smacss": "^2.1.3",
    "cz-conventional-changelog": "^3.0.2",
    "gatsby-plugin-sass": "^2.0.10",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "node-sass": "^4.11.0",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-order": "^2.0.0",
    "stylelint-scss": "^3.5.3",
    "tslint": "^5.12.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3"
  },
  "lint-staged": {
    "*.[ts, tsx]": [
      "npm run lint:ts --fix",
      "git add"
    ],
    "*.{sass, scss, css}": [
      "npm run lint:style --fix",
      "git add"
    ]
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MoonW1nd/Ivankov.pro.git"
  },
  "keywords": [
    "site",
    "personal",
    "site"
  ],
  "author": "Alexander Ivankov",
  "bugs": {
    "url": "https://github.com/MoonW1nd/Ivankov.pro/issues"
  },
  "homepage": "https://github.com/MoonW1nd/Ivankov.pro#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
